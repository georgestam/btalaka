

%footer#footer.clearfix{dir: @dir}
  / .footer start
  / ================
  .footer
    .container
      .footer-inner
        .row
          .col-xs-12.col-md-5.col-md-push-2
            = cl_image_tag "btalaka/btalaka.png",                               
              client_hints: true,                                                                
              transformation: [{dpr:"auto", gravity:"", crop:"fill"}], 
              class: "img-responsive center-block img-rounded-half",                             
              style: "margin: 50px; width: 1000px" 
  
          .col-xs-12.col-md-4.col-md-push-4
            .footer-content
              %h2.title 
                = t('.contact_us')
              .separator-2
              %p 
                = t('.contact_us_description')
              -# %ul.social-links.circle.animated-effect-1
                %li.twitter
                  %a{:href => "https://twitter.com/r4k4n", :target => "_blank"}
                    %i.fa.fa-twitter
                %li.instagram
                  %a{:href => "https://www.instagram.com/starfish_gcc", :target => "_blank"}
                    %i.fa.fa-instagram
              .separator-2
              %ul.list-icons
                %li
                  %i.fa.fa-map-marker.pr-10.text-default
                    = t '.starfish_address'
                %li
                  %i.fa.fa-phone.pr-10.text-default
                    = t '.starfish_mobile'
                %li
                  %i.fa.fa-envelope-o.pr-10
                    = t '.starfish_email'
  / .footer end
  / .subfooter start
  / ================
  
  .subfooter
    .container
      .subfooter-inner
        .row
          .col-md-12
            %p.text-center
              Copyright Â© 
              = DateTime.now.year  
              = t 'views.starfish_title'
              -# by
              -# = succeed "." do
                %a{:href => "http://newwaves.design", :target => "_blank"} New Waves Design 
              All Rights Reserved


  / .subfooter end
